<h1 class="my-3">会員一覧</h1>

<div class="row justify-content-center">
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>会員氏名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user) do %>
              <span><%= user.name %></span>
            <% end %>
          </td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>