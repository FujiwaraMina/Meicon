<div class="container font">
  <h1 class="my-3">会員詳細</h1>
  <div class="row justify-content-center">
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <!--会員編集ボタン-->
    <div class="d-flex align-items-end ml-5">
      <%= link_to "UserEdit", edit_admin_user_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>

  <!--ユーザーの投稿一覧-->
  <div class="row">
    <% @posts.each do |post| %>
      <%= link_to admin_post_path(post) do %>
       <%= image_tag post.get_post_image(190, 190), class: "mx-3 my-3" %>
      <% end %>
    <% end %>
  </div>
  <!--ページネーション-->
  <div class="row justify-content-center">
    <%= paginate @posts %>
  </div>
</div>