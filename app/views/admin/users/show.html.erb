<div class="container">
  <h1 class="my-3">会員詳細</h1>
  <div class="row justify-content-center">
    <div class="col-8">
      <table class="table">
        <tbody>
          <tr>
            <th>ニックネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <!--会員編集ボタン-->
    <div class="d-flex align-items-end ml-5">
      <%= link_to "UserEdit", edit_admin_user_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>

  <!--ユーザーの投稿一覧 10件でページネーション-->
  <div class="row">
    <%= render "public/posts/index", posts: @posts %>
  </div>
</div>