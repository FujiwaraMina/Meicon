<div class="container font">
  <!--エラーメッセージ-->
  <%= render "layouts/error", obj: @post %>
  <h1 class="my-3"></h1>

  <div class="row justify-content-center">
    <%= form_with model: @post, url: post_path, locla: true, class: "col-6" do |f| %>
    <!--プレビュー表示-->
    <div id="new-image", class="newimage row justify-content-center mb-5"></div>
      <div>
        <%= f.file_field :post_image, placeholder: "アイコン画像", accept: "image/*" %>
      </div>
      <div>
        <h4>Title</h4>
        <%= f.text_field :title, class: "col-12" %>
      </div>
      <div>
        <h4>Caption</h4>
        <%= f.text_area :body, class: "col-12" %>
      </div>
      <div>
        <h4>Tag (,で区切ると複数タグ登録できます)</h4>
        <%= f.text_field :tag_name, value: @tag_list, class: "form-control col-12" %>
      </div>
      <div class="actions text-center my-3">
        <%= f.submit '投稿編集', class: "btn btn-lg btn-light" %>
      </div>
    <% end %>
  </div>

</div>