<div class="row justify-content-center">
  <%= image_tag @user.get_user_image(50, 50) %>
  <%= @user.name %>
  <!--いいね-->
  <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %>
      <% end %>
    </p>
  <% end %>
</div>

<div class="row justify-content-center">
  <%= image_tag @post.get_post_image(400, 400) %>
</div>

<div class="row justify-content-center">
  <%= @post.title %>
</div>

<div class="row justify-content-center">
  <%= @post.body %>
</div>

<%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger btn-sm" %>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_user_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-sm btn-danger" %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "Comments" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>