<div class="container">

  <h1 class="my-3">新規投稿</h1>

  <div class="row justify-content-center">
    <%= form_with model: @post_new, url: posts_path, locla: true do |f| %>
    <!--プレビュー表示-->
    <div id="new-image", class="newimage row justify-content-center mb-5"></div>
      <div>
        <%= f.file_field :post_image, placeholder: "アイコン画像", accept: "image/*" %>
      </div>
      <div>
        <h4>Title</h4>
        <%= f.text_field :title, class: "col-12" %>
      </div>
      <div>
        <h4>Caption</h4>
        <%= f.text_area :body, class: "col-12" %>
      </div>
      <div class="actions text-center my-3">
        <%= f.submit '新規投稿', class: "btn btn-lg btn-light" %>
      </div>
    <% end %>
  </div>

</div>