<h1 class="my-3">User Edit</h1>

<div>
  <%= form_with model: @user, url: user_path, id: "new_user", class: "new_user",local: true do |f| %>
    <div class="field row justify-content-center mb-5">
      <%= f.label :user_image, "アイコン", class: "col-3" %>
      <%= f.file_field :user_image, placeholder: "プロフィール画像", accept: "image/*", class: "col-5" %>
    </div>

    <div class="field row justify-content-center mb-5">
      <%= f.label :name, "ニックネーム", class: "col-3" %>
      <%= f.text_field :name, autofocus: true, placeholder:"ニックネーム", class: "col-5" %>
    </div>

    <div class="field row justify-content-center mb-5">
      <%= f.label :user_caption, "キャプション", class: "col-3" %>
      <%= f.text_area :user_caption, placeholder:"キャプション", class: "col-5" %>
    </div>

    <div class="field row justify-content-center mb-5">
      <%= f.label :email, "メールアドレス", class: "col-3" %>
      <%= f.text_field :email, placeholder:"メールアドレス", class: "col-5" %>
    </div>

    <div class="field row justify-content-center mb-5">
      <%= f.submit "変更を保存", class: "btn btn-lg btn-light" %>
    </div>
<% end %>
</div>