<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <%= link_to root_path do %>
        <!--ロゴ画像-->
        <%= image_tag "", size: "100x100", class: "navbar-brand" %>
      <% end %>
      <!--ハンバーガーメニュー-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if admin_signed_in? %>
          <!--管理者ログイン時-->
            <li class="nav-item btn">
              <%= link_to "Users", admin_root_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "LogOut", destroy_admin_session_path, method: :delete, class: "nav-link text-dark" %>
            </li>
          <% elsif user_signed_in? %>
          <!--ログイン時-->
            <li class="nav-item btn">
              <%= link_to "MyPage", user_path(current_user), class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "Icons", posts_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "Users", users_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "LogOut", destroy_user_session_path, method: :delete, class: "nav-link text-dark" %>
            </li>
          <% else %>
          <!--非ログイン時-->
            <li class="nav-item btn">
              <%= link_to "About", about_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "Icons", posts_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "SignUp", new_user_registration_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item btn">
              <%= link_to "LogIn", new_user_session_path, class: "nav-link text-dark" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>